@using Microsoft.Extensions.Localization
@using Omar.BookStore2.Books
@using Omar.BookStore2.Localization
@using Volo.Abp.Application.Dtos
@inject IStringLocalizer<BookStore2Resource> L;
@model PagedResultDto<BookDto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<abp-card>
    <abp-card-header>
        <h4>Books Widgets (Client Side)</h4>
    </abp-card-header>
    <abp-card-body>


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@L["Name"]</th>
                    <th>@L["Type"]</th>
                    <th>@L["PublishDate"]</th>
                    <th>@L["Price"]</th>
                    <th>@L["AuthorName"]</th>
                </tr>
            </thead>
            <tbody id ="book-list">
               
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <th>@item.Name</th>
                        <th>@L[$"{item.Type}"]</th>
                        <th>@item.PublishDate</th>
                        <th>@item.Price</th>
                        <th>@item.AuthorName</th>
                    </tr>
                }
               
               
            </tbody>
        </table>

    </abp-card-body>
</abp-card>


