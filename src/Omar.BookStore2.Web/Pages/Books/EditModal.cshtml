@page
@using Omar.BookStore2.Web.Pages.Books;
@using Omar.BookStore2.Localization;
@using Microsoft.Extensions.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<BookStore2Resource> L;
@{
    Layout = null;
}

<abp-dynamic-form asp-page="/Books/EditModal" abp-model="Book">

    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id"></abp-input>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>

</abp-dynamic-form>
